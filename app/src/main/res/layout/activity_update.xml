<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.labGPS.Update">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        android:padding="20sp"
        android:scaleType="centerInside"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">

        <Button

            android:id="@+id/updateNote"
            android:layout_marginStart="250sp"
            android:layout_marginEnd="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_save"

            app:backgroundTint="#008577"
            app:rippleColor="#00574B"
            />


        <EditText
            android:id="@+id/EditTextTitleUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginTop="30sp"
            android:fontFamily="@font/sriracharegular"
            android:hint="@string/Title"
            android:scaleType="centerInside"


            android:textAlignment="center"
            android:textSize="24sp"

            >

        </EditText>


        <EditText
            android:id="@+id/EditTextDescriptionUpdate"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/TextViewTime"
            android:layout_marginTop="50sp"
            android:fontFamily="@font/sriracharegular"
            android:hint="@string/Description"

            android:maxLines="8"
            android:scaleType="centerInside"
            android:textAlignment="center"


            android:textSize="24sp">

        </EditText>

        <Button

            android:id="@+id/deletecameraiconupdate"

            android:layout_marginTop="15sp"
            android:layout_marginStart="280sp"
            android:layout_marginEnd="5sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/ic_deletecamera"

            app:backgroundTint="#008577"
            app:rippleColor="#00574B"
            />



        <ImageView

            android:id="@+id/imageviewupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">



        </ImageView>


        <Button

            android:id="@+id/cameraiconupdate"

            android:layout_marginTop="15sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_camera"

            app:backgroundTint="#008577"
            app:rippleColor="#00574B"

            />






    </androidx.appcompat.widget.LinearLayoutCompat>



</ScrollView>